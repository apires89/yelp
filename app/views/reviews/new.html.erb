<h1 class="text-center">Post Review for <%= @restaurant.name %></h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back", restaurant_path(@restaurant) %>
    </div>
  </div>
</div>
